{% if user %}
<div class = "form">
<h2>Your email adress is not verified. </h2>
<form method="post">
    <table>
        <tr>
            <td>
                <br>Check your inbox or send verification email again.
                <br>You can change your email adress
                <br>below too if you had typed your email wrong.
            </td>
        </tr>
        <tr>
            <td>
                <label>Email: </label>
            </td>
        </tr>
        <tr>
            <td>
                <input type="email" name="email" placeholder="email" value="{{ user.getEmail() }}" required id="email">
            </td>
        </tr>
        <tr>
            <td>
                <input type="hidden" value="{{ getMac("send-email") }}" name="XSRFPreventionToken">
                <button type="submit" name="verify" value="verify">Send email</button>
            </td>
        </tr>
    </table>
</form>
    <label>Log out:</label>
    <br><form action="index.php" method="post">
        <input type="hidden" value="{{ getMac("Logout") }}" name="XSRFPreventionToken">
        <input type="submit" name="logout" value="Logout">
    </form>
</div>
{% endif %}
<p id="back"><a href = "../"><img src="{{rel}}Images/BackBtn.svg" alt="Back" width="100"></a></p>
</body>
</html>
