<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link type="text/css" rel="stylesheet" href="../stylesheet.css" />
    <title>Profile page</title>
</head>
<body>
{% include 'login2.twig' %}
<div class="flash-notice">
    {% for header in session.getFlashBag.get('header', []) %}
        <h3>{{ header }}</h3>
    {% endfor %}
    {% for message in session.getFlashBag.get('message', []) %}
        <p>{{ message }}</p>
    {% endfor %}
</div>

{% if userData %}
<div class = "userform">
    <h1 id ="user">
        User details
    </h1>
    <ul id = "usr">
        <li>
            Username: {{ userData['username'] }}
        </li>
        <li>
            Full name: {{ userData['firstname'] }} {{ userData['lastname']  }}
        </li>
        <li>
            User type: {% if user.isAdmin() %} Admin {% else %} General user {% endif %}
        </li>
    </ul>
{% endif %}

{% if isOwner or user.isAdmin() %}
    <p id ="usr-button"><a href="edit-user/?username={{userData['username']}}" class="button_white">Edit user</a></p>
{% endif %}
<p id="back"><a href = "../">Back </a></p>
</div></body>
</html>
